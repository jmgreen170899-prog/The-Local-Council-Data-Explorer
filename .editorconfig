# EditorConfig - https://editorconfig.org
# Helps maintain consistent coding styles across different editors

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

# CSS files
[*.css]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Docker files
[Dockerfile]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
